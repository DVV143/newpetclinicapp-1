{
  "_comment" : "Simple Packer Template using Amazon Linux 2017.03",
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-246ed34c",
    "instance_type": "t1.micro",
    "ssh_username": "ec2-user",
    "ami_name": "petclinic-{{user `Build`}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo yum update -y",
      "sudo yum install java-1.8.0 java-1.8.0-openjdk-devel tomcat8-webapps -y",
      "sudo yum remove java-1.7.0-openjdk  -y",
      "sudo cp /var/lib/jenkins/workspace/petclinicimmutable/target/petclinic.war /usr/share/tomcat8/webapps/petclinic.war",            
      "sudo chkconfig tomcat8 on"
    ]
  }]
}
